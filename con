public class App {
    public static void main(String[] args) throws Exception {

        for (int i = 5; i != 0; i--) {
         
         if (i == 4) {
                System.out.println("Wait! Timeout! I need to drink water!");
                break;
            }

            System.out.println("Woooooo!.. I can do this all day!");
        
            System.out.println("Christine Joy");
        
        }
        int surnameCount= 5;

        do {
            System.out.println("Lu");
            surnameCount--;
        } while (surnameCount != 0);
        
        int nicknameCount = 5;
          
        while (nicknameCount != 0) {
            
            nicknameCount--;
            if (nicknameCount == 2) {
                System.out.println("Go ahead i will skip this third loop. i will ride on the next loop!");
                continue;
            }
            
            System.out.println("CJ!"); 
            
        }
    }
}
